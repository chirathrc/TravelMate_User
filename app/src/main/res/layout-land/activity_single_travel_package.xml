<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleTravelPackageActivity"
    android:background="#F7F8FA">

    <!-- Top Image Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/imageCard"
                android:layout_width="match_parent"
                android:layout_height="257dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/imageViewPackageImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="50dp"
                    android:layout_height="47dp"
                    android:layout_gravity="start|top"
                    android:layout_margin="10dp"
                    android:contentDescription="Back icon"
                    app:srcCompat="@drawable/previous" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Package Title and Quick Details -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/detailsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adventure Nuwraeliya"
                            android:textColor="#000"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/priceText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/currency"
                                android:textColor="#FF4081"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/priceTextReal"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:text="50"
                                android:textColor="#FF4081"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/priceText3"
                                android:layout_width="73dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:text="@string/p_p"
                                android:textColor="#FF4081"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/locationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Nuwaraeliya"
                            android:textColor="#666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/descriptionTextOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Experience the serene beauty of Nuwara Eliya with breathtaking landscapes, lush tea estates, cool climate, and enchanting waterfalls."
                            android:textAlignment="viewStart"
                            android:textColor="#666"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Features and Additional Details -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/featuresCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/featuresLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Features"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Icon 1 -->
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/bedIcon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/bed"
                                    android:tint="#FF4081" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:textAlignment="center">

                                    <TextView
                                        android:id="@+id/nightCount"
                                        android:layout_width="23dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="2"
                                        android:textAlignment="textEnd"
                                        android:textColor="#666"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/nightText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_weight="1"
                                        android:text="@string/nights"
                                        android:textAlignment="center"
                                        android:textColor="#666"
                                        android:textSize="14sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <!-- Icon 2 -->
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/adultIcon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/calendar"
                                    android:tint="#FF4081" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:textAlignment="center">

                                    <TextView
                                        android:id="@+id/daysCount_modern"
                                        android:layout_width="26dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="2"
                                        android:textAlignment="textEnd"
                                        android:textColor="#666"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/bedText2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_weight="1"
                                        android:text="@string/days"
                                        android:textAlignment="center"
                                        android:textColor="#666"
                                        android:textSize="14sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <!-- Icon 3 -->
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/wifiIcon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/location"
                                    android:tint="#FF4081" />

                                <TextView
                                    android:id="@+id/wifiText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/location"
                                    android:textColor="#666"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Additional Info Section -->
                        <TextView
                            android:id="@+id/additionalInfoLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/more_details"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/additionalInfoText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Cancellation Policy: Cancel free of charge up to 5 days prior to arrival. Late cancellations may incur a 50% charge."
                            android:textColor="#666"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/whereToVisitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="#6200EE"
                    android:text="@string/where_i_visit"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:id="@+id/actionButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/addToWishlistButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF4081"
                        android:text="@string/add_to_wishlist"
                        android:textColor="#FFF"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buyPackageButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#4CAF50"
                        android:text="@string/buy_package"
                        android:textColor="#FFF"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Scrollable Content -->
</androidx.constraintlayout.widget.ConstraintLayout>
